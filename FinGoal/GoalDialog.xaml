<Window x:Class="FinGoal.Views.GoalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinGoal"
        mc:Ignorable="d"
        Title="GoalDialog" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Название цели" />
        <TextBox x:Name="TitleBox" Margin="0,5" />
        <TextBlock Text="Целевая сумма" />
        <TextBox x:Name="TargetBox" Margin="0,5" />
        <TextBlock Text="Текущая сумма" />
        <TextBox x:Name="CurrentBox" Margin="0,5" />
        <TextBlock Text="Крайний срок" />
        <DatePicker x:Name="DeadlinePicker" Margin="0,5" />
        <Button Content="OK" Click="OkButton_Click" Margin="0,10,0,0" />
    </StackPanel>
</Window>
